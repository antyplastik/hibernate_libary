<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Ustawienia polaczenia z baza danych -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/moviesRental</property>
        <property name="connection.username">root</property>
        <property name="connection.password">1234</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <!-- Wyswietlaj w konsoli wszystkie kody SQL - bezcenne przy debugowaniu -->
        <property name="show_sql">true</property>
        <!-- Przy starcie aplikacji usun istniejaca baze i utworz ja od nowa -->
        <property name="hbm2ddl.auto">create-drop</property>
        <!-- Klasy mapowane -->
        <mapping class="pl.sda.javawwa13.hibernatefun.library.model.SimpleMovie"/>

    </session-factory>
</hibernate-configuration>